@model DoAnChuyenNganh.Models.Lop

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thêm lớp</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <div class="container-index">
        <h2>HỆ THỐNG QUẢN LÝ TRUNG TÂM ANH NGỮ</h2>
    </div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light w-100">
            <div class="container-fluid">
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <a class="navbar-brand" href="~/QLAN/TrangChu">Trang chủ</a>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/QLAN/Lop">Quản lý lớp</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/QLAN/DangKy">Quản lý đăng ký</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/QLAN/HocVien">Quản lý học viên</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/QLAN/Diem">Quản lý điểm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/QLAN/GiangVien">Quản lý giảng viên</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/QLAN/LichGiangDay">Xem lịch giảng dạy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/QLAN/DiemDanh">Điểm danh</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/QLAN/BaoCao">Thống kê báo cáo</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <br />

        <form asp-action="createLopCS" method="post">
            @Html.AntiForgeryToken()

            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Vui lòng điền thông tin lớp học</h5>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="MaLop">Mã lớp:</label>
                                <input asp-for="MaLop" type="text" class="form-control" />
                                <span asp-validation-for="MaLop" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TenLop">Tên lớp:</label>
                                <input asp-for="TenLop" type="text" class="form-control" />
                                <span asp-validation-for="TenLop" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NgayBatDau">Ngày bắt đầu:</label>
                                <input asp-for="NgayBatDau" type="text" class="form-control" />
                                <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NgayKetThuc">Ngày kết thúc:</label>
                                <input asp-for="NgayKetThuc" type="text" class="form-control" />
                                <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ThoiGianHoc">Thời gian học:</label>
                                <input asp-for="ThoiGianHoc" type="text" class="form-control" />
                                <span asp-validation-for="ThoiGianHoc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CaHoc">Ca học:</label>
                                <input asp-for="CaHoc" type="text" class="form-control" />
                                <span asp-validation-for="CaHoc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SiSo">Sỉ số:</label>
                                <input asp-for="SiSo" type="text" class="form-control" />
                                <span asp-validation-for="SiSo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TenGiangVien">Tên giảng viên</label>
                                <input asp-for="TenGiangVien" type="text" class="form-control" />
                                <span asp-validation-for="TenGiangVien" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MaSoGiangVien">Mã số giảng viên:</label>
                                <input asp-for="MaSoGiangVien" type="text" class="form-control" />
                                <span asp-validation-for="MaSoGiangVien" class="text-danger"></span>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <a asp-action="Lop" class="btn btn-secondary">Hủy</a>
                        <input type="submit" value="Thêm" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </form>
    </header>

    <br />

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>